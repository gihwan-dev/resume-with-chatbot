---
interface Stat {
  value: string
  label: string
  description: string
}

const stats: Stat[] = [
  {
    value: "90%",
    label: "렌더링 성능 개선",
    description: "데이터 그리드 아키텍처 개선",
  },
  {
    value: "600+",
    label: "통합 테스트",
    description: "회귀 버그 원천 차단",
  },
  {
    value: "70%",
    label: "장애 인지 시간 단축",
    description: "모니터링 대시보드 개편",
  },
  {
    value: "97%",
    label: "CI/CD 접근 시간 개선",
    description: "3분 → 5초",
  },
]
---

<section id="highlights">
  <div class="grid grid-cols-2 gap-4 md:grid-cols-4 md:gap-6">
    {
      stats.map((stat) => (
        <div class="rounded-sm border border-resume-border bg-resume-card-bg p-4 text-center transition-all duration-300 hover:border-resume-primary/50 hover:bg-resume-highlight/30">
          <p class="text-2xl font-bold tracking-tight text-resume-primary sm:text-3xl">
            {stat.value}
          </p>
          <p class="mt-1 text-sm font-medium text-resume-text-main">
            {stat.label}
          </p>
          <p class="mt-0.5 text-xs text-resume-text-muted">{stat.description}</p>
        </div>
      ))
    }
  </div>
</section>
