---
import { Badge } from "@/components/ui/badge"

interface SkillCategory {
  name: string
  items: string[]
}

interface Props {
  skills: { categories: SkillCategory[] }
}

const { skills } = Astro.props
---

<section id="skills" class="mb-12">
  <h2 class="text-2xl font-bold text-resume-text-main mb-8 tracking-tight">
    Skills
  </h2>
  <div class="space-y-5">
    {
      skills.categories.map((category) => (
        <div>
          <h3 class="text-sm font-semibold text-resume-text-muted uppercase tracking-wider mb-2">
            {category.name}
          </h3>
          <div class="flex flex-wrap gap-1.5">
            {category.items.map((item) => (
              <Badge
                variant="outline"
                className="text-xs font-normal text-resume-text-main bg-resume-bg border-resume-border px-2 py-0.5"
              >
                {item}
              </Badge>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
