---
import { Markdown } from "@astropub/md"
import { Badge } from "@/components/ui/badge"
import type { ResumeSummaryBlock } from "@/lib/resume-portfolio/contracts"

interface Props {
  projects: ResumeSummaryBlock[]
}

const { projects } = Astro.props
---

<section
  id="projects"
  class="mb-12"
>
  <h2 class="text-2xl font-bold text-resume-text-main mb-8 tracking-tight">
    Projects
  </h2>
  <div class="space-y-8">
    {
      projects.map((project) => (
        <div class="group bg-resume-card-bg rounded-sm border border-resume-border p-6 flex flex-col transition-all duration-300 hover:border-resume-primary/50 hover:bg-resume-highlight/30">
          <div class="mb-6">
            <h3 class="text-xl font-bold text-resume-text-heading font-heading leading-tight group-hover:text-resume-primary transition-colors mb-4">
              {project.title}
            </h3>

            {project.technologies && project.technologies.length > 0 ? (
              <div class="flex flex-wrap gap-1.5 mb-4">
                {project.technologies.map((tech) => (
                  <Badge
                    variant="outline"
                    className="text-xs font-normal text-resume-text-main bg-resume-bg border-resume-border px-2 py-0.5"
                  >
                    {tech}
                  </Badge>
                ))}
              </div>
            ) : null}

            <p class="text-resume-text-main/80 mb-6 text-[0.95rem] leading-relaxed">
              {project.summary}
            </p>

            {project.accomplishments && project.accomplishments.length > 0 ? (
              <ul class="resume-bullet-list space-y-2">
                {project.accomplishments.map((item) => (
                  <li class="pl-4 relative text-[0.95rem] text-resume-text-main/90 leading-relaxed">
                    <span class="absolute left-0 top-2.5 w-1.5 h-1.5 rounded-full bg-resume-primary/70" />
                    <Markdown of={item} />
                  </li>
                ))}
              </ul>
            ) : null}
          </div>

          {project.ctaHref && project.ctaLabel ? (
            <div class="flex justify-start pt-4 mt-auto">
              <a
                href={project.ctaHref}
                class="inline-flex items-center text-sm font-semibold text-resume-primary hover:text-resume-secondary transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring rounded-sm group/btn"
                data-ga-event="project_portfolio_click"
                data-ga-project={project.title}
              >
                {project.ctaLabel}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="ml-1.5 h-4 w-4 transition-transform group-hover/btn:translate-x-1"
                >
                  <path d="M5 12h14" />
                  <path d="m12 5 7 7-7 7" />
                </svg>
              </a>
            </div>
          ) : null}
        </div>
      ))
    }
  </div>
</section>
