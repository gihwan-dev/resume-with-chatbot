---
import type { ImpactItem } from "@/lib/resume-portfolio/contracts"

interface Props {
  impacts: ImpactItem[]
}

const { impacts } = Astro.props
---

<div class="grid grid-cols-1 gap-y-5 sm:grid-cols-3 sm:gap-x-5" data-impact-grid>
  {impacts.map((impact, index) => (
    <article
      class="min-w-0 h-full py-1 sm:px-4 sm:py-0 sm:border-l sm:border-resume-border/45 sm:first:border-l-0 sm:first:pl-0 sm:last:pr-0 print:break-inside-avoid"
      data-impact-item
      data-impact-index={index}
    >
      <p
        class="break-words text-3xl font-extrabold tracking-tight text-resume-primary sm:text-4xl print:text-slate-800"
        data-impact-value
      >
        {impact.value}
      </p>
      <p
        class="mt-2 break-words text-sm font-semibold text-resume-text-heading print:text-slate-900"
        data-impact-label
      >
        {impact.label}
      </p>
      <p
        class="mt-1.5 break-words text-xs leading-relaxed text-resume-text-main/60 print:text-slate-700"
        data-impact-description
      >
        {impact.description}
      </p>
    </article>
  ))}
</div>
