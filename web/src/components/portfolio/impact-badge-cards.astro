---
import type { ImpactItem } from "@/lib/resume-portfolio/contracts"

interface Props {
  impacts: ImpactItem[]
}

const { impacts } = Astro.props
---

<div class="w-full" data-impact-grid>
  <div class="flex w-full items-stretch border-y border-resume-border/45 py-3">
    {impacts.map((impact, index) => (
      <article
        class="min-w-0 flex-1 border-l border-resume-border/45 px-3 text-center first:border-l-0 print:break-inside-avoid sm:px-4"
        data-impact-item
        data-impact-index={index}
      >
        <div class="space-y-1">
          <p
            class="break-words text-[13px] font-semibold leading-snug text-resume-text-heading sm:text-sm print:text-slate-900"
            data-impact-label
          >
            {impact.label}
          </p>
          <p
            class="break-words text-sm font-bold leading-snug text-resume-primary sm:text-[15px] print:text-slate-800"
            data-impact-value
          >
            {impact.value}
          </p>
        </div>
        <p class="sr-only" data-impact-description>
          {impact.description}
        </p>
      </article>
    ))}
  </div>
</div>
