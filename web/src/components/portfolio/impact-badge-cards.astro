---
import type { ImpactItem } from "@/lib/resume-portfolio/contracts"

interface Props {
  impacts: ImpactItem[]
}

const { impacts } = Astro.props
---

<div class="grid grid-cols-1 gap-3 sm:grid-cols-2 sm:gap-4 lg:grid-cols-3">
  {impacts.map((impact) => (
    <article class="min-w-0 h-full rounded-xl border border-resume-primary/20 bg-resume-card-bg px-4 py-4 shadow-sm sm:px-5 print:break-inside-avoid print:border-slate-300 print:shadow-none">
      <p class="break-words text-2xl font-extrabold tracking-tight text-resume-primary sm:text-3xl lg:text-4xl print:text-slate-800">
        {impact.value}
      </p>
      <p class="mt-2 break-words text-sm font-semibold text-resume-text-heading print:text-slate-900">
        {impact.label}
      </p>
      <p class="mt-2 break-words text-sm leading-relaxed text-resume-text-main/80 print:text-slate-700">
        {impact.description}
      </p>
    </article>
  ))}
</div>
